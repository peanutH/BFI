			if (radarPoly) {
				radarPoly.setAttribute('points', pts.join(' '));
			}

			const map = Object.fromEntries(Object.entries(scores).map(([k,v]) => [k, v.percent || 50]));
			const p = personas.find(x => x.criteria(map)) || personas[personas.length-1];
			
			const nameEl = document.getElementById('persona-name');
			const descEl = document.getElementById('persona-description');
			if (nameEl) {
