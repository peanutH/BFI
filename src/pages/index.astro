		function calculate() {
			const res = {};
			for (const [k, v] of Object.entries(traitConfig)) {
				let s = 0, c = 0;
				v.forward.forEach(i => { if(answers[i]){ s += answers[i]; c++; }});
				v.reverse.forEach(i => { if(answers[i]){ s += (6-answers[i]); c++; }});
				res[k] = { percent: ((s/c - 1) / 4) * 100 };
			}
			return res;
		}

		function display(scores) {
			document.getElementById('display-user-id').textContent = personalInfo.nickname;
			const traits = ['O', 'C', 'E', 'A', 'N'];
			const pts = traits.map((t, i) => {
				const a = (i * 2 * Math.PI / 5) - Math.PI / 2;
				const r = (scores[t].percent / 100) * 150;
				return `${200 + r * Math.cos(a)},${200 + r * Math.sin(a)}`;
			});
			document.getElementById('radar-poly').setAttribute('points', pts.join(' '));

			const map = Object.fromEntries(Object.entries(scores).map(([k,v]) => [k, v.percent]));
			const p = personas.find(x => x.criteria(map)) || personas[personas.length-1];
			
			const nameEl = document.getElementById('persona-name');
			nameEl.innerHTML = `
				<span class="text-en">${p.name.en}</span>
				<span class="text-zh">${p.name.zh}</span>
				<span class="text-it">${p.name.it}</span>
			`;

			const list = document.getElementById('traits-display');
			list.innerHTML = traits.map(t => `
				<div class="trait-row" style="--c: ${traitConfig[t].color}">
					<div class="trait-info">
						<span>${traitConfig[t].icon} ${traitConfig[t].name}</span>
						<span>${scores[t].percent.toFixed(0)}%</span>
					</div>
					<div class="trait-bar"><div style="width:${scores[t].percent}%"></div></div>
				</div>
			`).join('');
